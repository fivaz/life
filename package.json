{
  "name": "life",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --filter=!docs",
    "watch": "turbo run watch --filter=!docs",
    "build": "turbo run build --filter=!docs",
    "lint": "turbo run lint --filter=!docs",
    "format": "turbo run format --filter=!docs",
    "prune": "find . \\( -name \"node_modules\" -o -name \"dist\" -o -name \".svelte-kit\" -o -name \".turbo\" -o -name \".vercel\" \\) -type d -prune -exec rm -rf '{}' +",
    "prepare": "husky",
		"test:release-main": "act push -W .github/workflows/release-main.yml --secret-file .secrets --env PNPM_HOME=/pnpm --container-architecture linux/amd64",
		"test:release-lib": "act push -W .github/workflows/release-svelendar.yml --secret-file .secrets --env PNPM_HOME=/pnpm --container-architecture linux/amd64",
		"test:release-all": "act push --secret-file .secrets --env PNPM_HOME=/pnpm --container-architecture linux/amd64"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2",
    "semantic-release-monorepo": "^8.0.2",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  }
}
