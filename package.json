{
  "name": "life",
  "version": "1.2.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --filter=!docs",
    "watch": "turbo run watch --filter=!docs",
    "build": "turbo run build --filter=!docs",
    "lint": "turbo run lint --filter=!docs",
    "format": "turbo run format --filter=!docs",
    "prune": "find . \\( -name \"node_modules\" -o -name \"dist\" -o -name \".svelte-kit\" -o -name \".turbo\" -o -name \".vercel\" \\) -type d -prune -exec rm -rf '{}' +",
    "prepare": "husky",
    "test:release-main": "act push -W .github/workflows/release-main.yml --secret-file .secrets --env PNPM_HOME=/root/.pnpm-shared --env DRY_RUN=1 --container-architecture linux/amd64 --reuse --cache-server-path ~/.cache/act",
    "test:release-lib": "act push -W .github/workflows/release-svelendar.yml --secret-file .secrets --env PNPM_HOME=/root/.pnpm-shared --env DRY_RUN=1 --container-architecture linux/amd64 --reuse --cache-server-path ~/.cache/act",
    "test:release-all": "act push --secret-file .secrets --env PNPM_HOME=/root/.pnpm-shared --env DRY_RUN=1 --container-architecture linux/amd64 --reuse --cache-server-path ~/.cache/act"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  }
}
