{
	"name": "@life/shared",
	"version": "0.2.0",
	"scripts": {
		"dev": "svelte-package --watch",
		"standlone:dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write . && eslint . --fix && pnpm run check",
		"lint": "prettier --check . && eslint .",
		"storybook": "storybook dev -p 6007",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./date": {
			"types": "./dist/date.d.ts",
			"default": "./dist/date.js"
		},
		"./task": {
			"types": "./dist/task/index.d.ts",
			"default": "./dist/task/index.js"
		},
		"./category": {
			"types": "./dist/category/index.d.ts",
			"default": "./dist/category/index.js"
		},
		"./goal": {
			"types": "./dist/goal/index.d.ts",
			"default": "./dist/goal/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@lucide/lab": "^0.1.2",
		"@lucide/svelte": "^0.487.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.0",
		"@floating-ui/dom": "^1.6.13",
		"@life/config-eslint": "workspace:*",
		"@life/config-prettier": "workspace:*",
		"@playwright/test": "^1.57.0",
		"@storybook/addon-a11y": "^10.2.0",
		"@storybook/addon-docs": "^10.2.0",
		"@storybook/addon-essentials": "^8.4.5",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-themes": "^10.2.0",
		"@storybook/addon-vitest": "^10.2.0",
		"@storybook/blocks": "^8.4.5",
		"@storybook/sveltekit": "^10.2.0",
		"@storybook/test": "^8.4.5",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22",
		"@vitest/browser-playwright": "^4.0.15",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"postcss": "^8.4.49",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.2.0",
		"storybook": "^10.2.0",
		"svelte": "^5.48.0",
		"svelte-check": "^4.3.5",
		"svelte-portal": "^2.2.1",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.0.0",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"zod": "^3.23.8"
	}
}
