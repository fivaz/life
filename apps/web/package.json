{
	"name": "@life/web",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "PUBLIC_COMMIT_HASH=$(git rev-parse --short HEAD) vite dev --port 5175",
		"build": "PUBLIC_COMMIT_HASH=$(git rev-parse --short HEAD) vite build",
		"preview": "vite preview",
		"build:preview": "pnpm run build && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write . && eslint . --fix && pnpm run check",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"create": "plop --plopfile generators/plopfile.js",
		"generate-pwa-assets": "pwa-assets-generator"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.2",
