{
    "name": "@life/web",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "PUBLIC_COMMIT_HASH=$(git rev-parse --short HEAD) vite dev --port 5175",
        "build": "PUBLIC_COMMIT_HASH=$(git rev-parse --short HEAD) vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "build:preview": "pnpm run build && vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write . && eslint . --fix && pnpm run check",
        "test:e2e": "playwright test",
        "test": "npm run test:e2e && npm run test:unit -- --run",
        "test:unit": "vitest",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "create": "plop --plopfile generators/plopfile.js",
        "generate-pwa-assets": "pwa-assets-generator"
    },
