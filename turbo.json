{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "SENTRY_AUTH_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".svelte-kit/**", "package/**", ".vercel/**"]
    },
		"package": {
			"dependsOn": ["build"],
			"outputs": ["package/**"]
		},
    "lint": {},
    "format": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    }
  }
}